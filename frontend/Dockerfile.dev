# Frontend Dockerfile for Development
FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy source code
COPY . .

# Create non-root user
RUN addgroup -g 1001 -S nodejs \
    && adduser -S frontend -u 1001 \
    && chown -R frontend:nodejs /app
USER frontend

# Expose port
EXPOSE 3000

# Development command with hot reload
CMD ["npm", "run", "dev"]